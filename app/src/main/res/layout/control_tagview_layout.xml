<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label"
            android:labelFor="@+id/tag_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/ControlLabelStyle" />

        <RelativeLayout
            android:id="@+id/tags_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/controlHalfMarginBottom">

        </RelativeLayout>

        <TextView
            android:id="@+id/empty_tag_view_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_no_entries"
            style="@style/ControlTextFieldReadStyle" />

    </LinearLayout>

</merge>
