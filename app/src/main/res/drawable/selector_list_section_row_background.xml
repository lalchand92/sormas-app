<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/sectionListRowPressedBackground" />
            <corners android:radius="@dimen/sectionListRowRadius" />
            <stroke android:width="@dimen/sectionListRowSelectedStrokeSize" android:color="@color/sectionListRowPressedBorder" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/sectionListRowFocusedBackground" />
            <corners android:radius="@dimen/sectionListRowRadius" />
            <stroke android:width="@dimen/sectionListRowSelectedStrokeSize" android:color="@color/sectionListRowFocusedBorder" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/sectionListRowSelectedBackground" />
            <corners android:radius="@dimen/sectionListRowRadius" />
            <stroke android:width="@dimen/sectionListRowSelectedStrokeSize" android:color="@color/sectionListRowSelectedBorder" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/sectionListRowBackground" />
            <corners android:radius="@dimen/sectionListRowRadius" />
        </shape>
    </item>
</selector>