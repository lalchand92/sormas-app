<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disabled -->
    <item android:state_enabled="false">
        <shape>
            <stroke
                android:width="@dimen/textViewBorder"
                android:color="@color/controlTextViewDisabledStroke"/>
            <corners android:radius="@dimen/textViewRadius" />
            <padding
                android:left="@dimen/textViewLeftPadding"
                android:right="@dimen/textViewRightPadding" />
        </shape>
    </item>

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="@dimen/textViewBorder"
                android:color="@color/controlTextViewActiveStroke"/>

            <corners android:radius="@dimen/textViewRadius" />

            <padding
                android:left="@dimen/textViewLeftPadding"
                android:right="@dimen/textViewRightPadding" />
        </shape>
    </item>

    <!-- focused -->
    <item android:state_focused="true">

        <shape>
            <stroke
                android:width="@dimen/textViewBorder"
                android:color="@color/controlTextViewActiveStroke"/>

            <corners android:radius="@dimen/textViewRadius" />

            <padding
                android:left="@dimen/textViewLeftPadding"
                android:right="@dimen/textViewRightPadding" />
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape>
            <stroke
                android:width="@dimen/textViewBorder"
                android:color="@color/controlTextViewStroke"/>

            <corners android:radius="@dimen/textViewRadius" />

            <padding
                android:left="@dimen/textViewLeftPadding"
                android:right="@dimen/textViewRightPadding"/>
        </shape>
    </item>
</selector>