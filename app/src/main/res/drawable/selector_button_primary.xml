<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle">
        <stroke android:width="@dimen/defaultControlStrokeWidth" android:color="@color/primaryButtonPressed" />
        <solid android:color="@color/primaryButtonPressed"/>
        <corners android:radius="@dimen/defaultButtonRadius" />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle">
        <stroke android:width="@dimen/defaultControlStrokeWidth" android:color="@color/primaryButtonFocused" />
        <solid android:color="@color/primaryButtonFocused"/>
        <corners android:radius="@dimen/defaultButtonRadius" />
    </shape>
</item>
<item>
    <shape android:shape="rectangle">
        <stroke android:width="@dimen/defaultControlStrokeWidth" android:color="@color/primaryButton" />
        <solid android:color="@color/primaryButton"/>
        <corners android:radius="@dimen/defaultButtonRadius" />
    </shape>
</item>
</selector>